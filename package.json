    "stop-only": "stop-only --folder . --skip node_modules",
    "test": "mocha '**.test.js' --bail"
  },
  "devDependencies": {
    "@azure/cosmos": "^3.17.2",
    "@digitallinguistics/eslint-config": "^0.2.0",
    "@digitallinguistics/models": "^0.2.0",
    "chai": "^4.3.7",
    "dotenv": "^16.0.3",
    "eslint": "^8.32.0",
    "eslint-plugin-chai-friendly": "^0.7.2",
    "mocha": "^10.2.0",
    "stop-only": "^3.1.2"
  },
  "publishConfig": {
    "access": "public"
  }
